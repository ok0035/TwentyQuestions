<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity = "center"
                android:text="Title"
                android:id="@+id/tvLetterDialogTitle" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvLetterDialogContent"
                android:background="#CCCCCC"
                android:gravity="center"
                android:text="content"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/etLetterDialogContent"
                android:text="content"
                android:visibility="gone"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="Left"
                android:gravity="center"
                android:id="@+id/tvLDLeftBtn"
                android:background="@drawable/round_rectangle_btn"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="Center"
                android:id="@+id/tvLDCenterBtn"
                android:gravity="center"
                android:background="@drawable/round_rectangle_btn"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="Right"
                android:id="@+id/tvLDRightBtn"
                android:gravity="center"
                android:background="@drawable/round_rectangle_btn"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>